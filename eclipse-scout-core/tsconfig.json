{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ES6",
    "skipLibCheck": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "noImplicitOverride": true,
    "useDefineForClassFields": true,
    // For jquery imports, see https://www.typescriptlang.org/tsconfig#allowSyntheticDefaultImports
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "ES2019"
    ],
    "types": [],
    "outDir": "dist/d.ts"
  },
  "include": [
    "./src/**/*"
  ]
}
